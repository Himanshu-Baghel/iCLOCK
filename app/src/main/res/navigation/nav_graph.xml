<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.iclock.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_eventFragment"
            app:destination="@id/eventFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_booksFragment"
            app:destination="@id/booksFragment"
            app:enterAnim="@anim/scale_animation" />
        <action
            android:id="@+id/action_dashboardFragment_to_moodleFragment"
            app:destination="@id/moodleFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_addEventImageFragment2"
            app:destination="@id/addEventImageFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_addBookImageFragment"
            app:destination="@id/addBookImageFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEventFragment"
        android:name="com.example.iclock.AddEventFragment"
        android:label="Add Events"
        tools:layout="@layout/fragment_add_event">
        <action
            android:id="@+id/action_addEventFragment_to_eventFragment"
            app:destination="@id/eventFragment" />
    </fragment>

    <fragment
        android:id="@+id/booksFragment"
        android:name="com.example.iclock.BooksFragment"
        android:label="Books"
        tools:layout="@layout/fragment_books_list" >
        <action
            android:id="@+id/action_booksFragment_to_bookDetails"
            app:destination="@id/bookDetails"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_close_exit" />
        <action
            android:id="@+id/action_booksFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/eventFragment"
        android:name="com.example.iclock.EventFragment"
        android:label="Events"
        tools:layout="@layout/fragment_event" >

        <action
            android:id="@+id/action_eventFragment_to_eventDetails"
            app:destination="@id/eventDetails"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <argument
            android:name="event_details"
            app:argType="com.example.iclock.CreateUserEvent" />

    </fragment>

    <fragment
        android:id="@+id/eventDetails"
        android:name="com.example.iclock.EventDetails"
        android:label="Event Details"
        tools:layout="@layout/fragment_event_details" />
    <fragment
        android:id="@+id/bookDetails"
        android:name="com.example.iclock.BookDetails"
        android:label="Book Details"
        tools:layout="@layout/fragment_book_details" />

    <fragment
        android:id="@+id/moodleFragment"
        android:name="com.example.iclock.MoodleFragment"
        android:label="Moodle"
        tools:layout="@layout/fragment_moodle" />
    <fragment
        android:id="@+id/addEventImageFragment"
        android:name="com.example.iclock.AddEventImageFragment"
        android:label="Pick Event Image" >
        <action
            android:id="@+id/action_addEventImageFragment_to_addEventFragment"
            app:destination="@id/addEventFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBookImageFragment"
        android:name="com.example.iclock.AddBookImageFragment"
        android:label="fragment_add_book_image"
        tools:layout="@layout/fragment_add_book_image" >
        <action
            android:id="@+id/action_addBookImageFragment_to_addBookFragment"
            app:destination="@id/addBookFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.example.iclock.AddBookFragment"
        android:label="fragment_add_book"
        tools:layout="@layout/fragment_add_book" >
        <action
            android:id="@+id/action_addBookFragment_to_booksFragment"
            app:destination="@id/booksFragment" />
    </fragment>

</navigation>